<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/car_padding_3">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/notification_header"
            android:layout_marginStart="@dimen/car_keyline_1"
            android:layout_marginBottom="@dimen/car_padding_0"
            style="@style/NotificationTitleText"/>

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/notification_title"
            android:layout_toStartOf="@id/notification_header"
            android:layout_marginStart="@dimen/car_keyline_1"
            android:layout_marginBottom="@dimen/car_padding_3"
            android:textAppearance="@style/TextAppearance.Car.Body3"/>

        <com.android.car.notification.CarNotificationHeaderView
            android:id="@+id/notification_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/car_padding_4"
            android:layout_marginEnd="@dimen/car_keyline_1"/>

        <!-- TODO: Use card_action_bar as background color when ready -->
        <com.android.car.notification.CarNotificationActionsView
            android:id="@+id/notification_actions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/car_card_action_bar_height"
            android:layout_below="@id/notification_text"
            android:background="@color/car_list_divider"/>
    </RelativeLayout>

</FrameLayout>